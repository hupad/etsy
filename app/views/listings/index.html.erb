<h1>Listings</h1>
<div class="row">
  <% @listings.each do |listing| %>
     <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag listing.image.url %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <% if listing.user %>
              <p><%= "Sold by #{listing.user.name}" %></p>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>
</div>

<%= link_to 'New Listing', new_listing_path %>
